    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug RMT (Bubble Tea)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/",
            "console": "integratedTerminal",
            "env": {
                "TERM": "xterm-256color"
            },
            "args": [],
            "showLog": false,
            "trace": "verbose"
        },
        {
            "name": "Debug RMT (External Terminal)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/",
            "console": "externalTerminal",
            "env": {
                "TERM": "xterm-256color"
            },
            "args": [],
            "showLog": false
        },
        {
            "name": "Debug RMT with Config",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/",
            "console": "integratedTerminal",
            "env": {
                "TERM": "xterm-256color",
                "HOME": "${env:HOME}"
            },
            "args": [],
            "showLog": false,
            "preLaunchTask": "go: build"
        }
    ]
}